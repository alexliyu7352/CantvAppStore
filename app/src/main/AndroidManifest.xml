<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.can.appstore">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE"/>

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PortalActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.Translucent.FadeIn">
        </activity>
        <activity
            android:name=".download.DownloadActivity"
            android:theme="@style/AppTheme.Translucent.FadeIn"
            >
            <intent-filter>
                <action android:name="com.can.appstore.action.DOWNLOAD"/>
            </intent-filter>
        </activity>
        <activity android:name=".specialtopic.SpecialActivity"
            android:theme="@style/AppTheme.Translucent.FadeIn"
            >
            <intent-filter>
                <action android:name="com.can.appstore.action.SPECIAL_TOPIC"/>
            </intent-filter>
        </activity>
        <activity android:name=".applist.AppListActivity">
            <intent-filter>
                <action android:name="com.can.appstore.applist.ACTION.applist"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".download.DownloadLeadAcitivity">
        </activity>

        <activity android:name=".uninstallmanager.UninstallManagerActivity">
        </activity>

        <activity android:name=".appdetail.AppDetailActivity">
        </activity>

        <activity
            android:name=".appdetail.ImageScaleActivity"
            android:theme="@style/Image_Scale_Transparent">
        </activity>

        <service android:name=".upgrade.UpgradeService">
            <intent-filter>
                <action android:name="com.can.appstore.upgrade.UpgradeService"/>
            </intent-filter>
        </service>
    </application>

</manifest>
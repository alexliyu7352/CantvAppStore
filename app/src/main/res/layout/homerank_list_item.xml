<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/px490"
                android:layout_height="@dimen/px104"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true">

    <cn.can.tvlib.ui.view.GlideRoundCornerImageView
        android:id="@+id/icon_view"
        android:layout_width="@dimen/px72"
        android:layout_height="@dimen/px72"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px24"
        android:background="@drawable/shap_app_list_icon_bg"
        android:scaleType="fitXY"
        app:cornerSize="@dimen/px24"
        app:placeholder="@mipmap/cibn_icon_mini"
        />

    <RelativeLayout
        android:layout_width="@dimen/px56"
        android:layout_height="@dimen/px78"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px24">

        <ImageView
            android:id="@+id/rank_r_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/rank_r_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/h_rank_tiem_text_gray"
            android:textSize="@dimen/px32"
            android:textStyle="italic|bold"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/app_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px10"
        android:layout_toRightOf="@id/icon_view"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:focusable="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="测试名称"
        android:textColor="@color/tr_20_white_color"
        android:textSize="@dimen/px32"/>

    <ImageView
        android:id="@+id/end_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/homerank_bottom_shadow"
        android:visibility="gone"/>

</RelativeLayout>
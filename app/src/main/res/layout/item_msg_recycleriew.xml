<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px116"
    >

    <LinearLayout
        android:id="@+id/item_ll_focus_msg"
        android:layout_width="@dimen/px1224"
        android:layout_height="@dimen/px115"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_green_dot"
            android:layout_width="@dimen/px16"
            android:layout_height="@dimen/px16"
            android:layout_marginLeft="@dimen/px16"
            android:layout_marginRight="@dimen/px16"
            android:clickable="true"
            android:src="@drawable/green_dot"
            android:visibility="invisible"
            />

        <!--textView文本跑马灯效果，在4.x版本上必须加上android:singleLine="true"-->
        <TextView
            android:id="@+id/item_tv_msg_title"
            android:layout_width="@dimen/px860"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/px120"
            android:ellipsize="marquee"
            android:focusable="true"
            android:includeFontPadding="false"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/msg_white_80"
            android:textSize="@dimen/fontsize_36"
            />

        <TextView
            android:id="@+id/item_tv_msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/msg_white_50"
            android:textSize="@dimen/fontsize_34"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_iv_btn_delete"
        android:layout_width="@dimen/px51"
        android:layout_height="@dimen/px51"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/px16"
        android:focusable="true"
        android:paddingStart="@dimen/px3"
        android:paddingEnd="@dimen/px2"
        android:src="@drawable/msg_del"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/px5"
        android:paddingRight="@dimen/px5"
        android:src="@drawable/msg_item_line"
        />

</RelativeLayout>
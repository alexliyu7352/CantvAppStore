<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/index_manager_padding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_manage_color"
        android:layout_width="@dimen/px270"
        android:layout_height="@dimen/px180"
        android:layout_centerHorizontal="true"
        android:background="@drawable/index_item5_shape"/>

    <ImageView
        android:id="@+id/iv_manage_icon"
        style="@style/index_manager_icon_mini_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/index_manager_icon5"/>

    <TextView
        android:id="@+id/tv_manage_name"
        style="@style/index_manager_mini_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/index_manager_text5"/>

</RelativeLayout>

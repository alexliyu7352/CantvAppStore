<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#bb000000"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
    >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:background="#faf9a703"
        />
    <TextView
        android:id="@+id/tv_special_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/iv_icon"
        android:text="@string/special"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        style="@style/NormalText"
        />

    <cn.can.tvlib.ui.view.recyclerview.CanRecyclerView
        android:id="@+id/rv_special_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#33ff00ff"
        >
    </cn.can.tvlib.ui.view.recyclerview.CanRecyclerView>

    <TextView
        android:id="@+id/tv_special_line"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="2/25è¡Œ"
        style="@style/NormalText"
        android:textSize="25sp"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px382"
    android:layout_height="@dimen/px256"
    android:layout_gravity="center"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    >
    <cn.can.tvlib.ui.view.RoundCornerImageView
        android:id="@+id/subject_item_imgvi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:maskColor="@color/black_opa80"
        app:maskSize="@dimen/dimen_64px"
        app:cornerSize="@dimen/px8"
        />
    <TextView
        android:id="@+id/subject_item_title_tv"
        android:background="@drawable/bg_horizontal_linear"
        android:layout_alignBottom="@+id/subject_item_imgvi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_64px"
        android:paddingStart="@dimen/px16"
        android:paddingEnd="@dimen/px16"
        android:textSize="@dimen/fontsize_30"
        android:textColor="@color/white_opa80"
        android:gravity="center"
        style="@style/commen_textview"
        />
</RelativeLayout>

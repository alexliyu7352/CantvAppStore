<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginStart="@dimen/px161"
                  android:layout_marginTop="@dimen/px80"
                  android:layout_marginEnd="@dimen/px161"
                  android:id="@+id/allapps_main_page"
                android:background="@color/black"
              >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/allapps_title"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部应用"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/fontsize_38"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px40"
            android:background="@drawable/menu_icon"/>
        <TextView
            android:id="@+id/allapps_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按菜单键获取更多功能"
            android:textColor="#ffffff"
            android:textSize="@dimen/fontsize_32"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用数"
            android:textColor="#ffffff"
            android:textSize="@dimen/fontsize_32"
            android:layout_gravity="end"
            />

    </LinearLayout>
    <GridView
        android:id="@+id/id_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/allapps_title"
        android:layout_centerHorizontal="true"
        android:verticalSpacing="8dp"
        android:numColumns="5"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:clipToPadding="false"/> <!-- 修复其最后边item选中后边框显示不全的问题  by zby-->
    <!--android:listSelector="@drawable/appmanager_gridview_selector"-->
</RelativeLayout>

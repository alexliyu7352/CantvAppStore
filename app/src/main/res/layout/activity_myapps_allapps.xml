<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/allapps_main_page"
                android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/allapps_title"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部应用"
            android:textSize="50dp"/>
        <TextView
            android:id="@+id/allapps_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用数"
            android:layout_gravity="right"
            />

    </LinearLayout>
    <GridView
        android:id="@+id/id_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/allapps_title"
        android:layout_centerHorizontal="true"
        android:verticalSpacing="8dp"
        android:numColumns="5"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:clipToPadding="false"/> <!-- 修复其最后边item选中后边框显示不全的问题  by zby-->
    <!--android:listSelector="@drawable/appmanager_gridview_selector"-->
</RelativeLayout>

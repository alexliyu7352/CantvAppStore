<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/myapps_main_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <cn.can.tvlib.ui.view.recyclerview.CanRecyclerView
        android:id="@+id/cr_myapps"
        android:layout_width="@dimen/px1700"
        android:layout_height="@dimen/px610"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/px10"
        android:paddingStart="@dimen/px20"
        android:paddingEnd="@dimen/px20"
        android:paddingTop="@dimen/px20"
        ></cn.can.tvlib.ui.view.recyclerview.CanRecyclerView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/cr_myapps"
        android:layout_below="@+id/cr_myapps"
        android:layout_marginEnd="@dimen/px10"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/px32"
            android:layout_height="@dimen/px32"
            android:layout_marginTop="@dimen/px8"
            android:background="@drawable/menu_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px8"
            android:text="@string/menu_management_of_sorting"
            android:textColor="@color/tv_menu_guanli_color"
            android:textSize="@dimen/fontsize_32"
            />

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/myapps_main_page"
              >



    <cn.can.tvlib.ui.view.recyclerview.CanRecyclerView
        android:id="@+id/cr_myapps"
        android:layout_width="1760px"
        android:layout_height="720px"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        ></cn.can.tvlib.ui.view.recyclerview.CanRecyclerView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cr_myapps"
        android:layout_alignRight="@id/cr_myapps"
        android:orientation="horizontal"
        android:layout_marginTop="70px"
        >
        <ImageView
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_marginTop="7px"
            android:background="@drawable/menu_icon"
            />
    <TextView
        android:layout_marginLeft="8px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:text="按菜单可管理应用排序"/>
    </LinearLayout>

</RelativeLayout>

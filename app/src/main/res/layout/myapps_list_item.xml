<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/px270"
                android:layout_height="@dimen/px180"
                android:focusable="true"
                android:descendantFocusability="beforeDescendants"
              >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/myapps_item_rlbg"
        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:id="@+id/myapp_ivicon"
        android:layout_marginTop="@dimen/px14"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px5"
        android:id="@+id/myapp_tvname"
        android:text="APP-NAME"
        android:textSize="@dimen/fontsize_32"
        android:gravity="center"
        android:textColor="@color/app_name_color"
        />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/myapps_ll_edit"
        android:background="@color/black_opa80"
        android:visibility="gone"
        >
    <Button
        android:id="@+id/myapps_but_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px54"
        android:text="置顶"
        android:background="@drawable/edit_button_selector"
        android:focusable="true"
        android:textSize="@dimen/fontsize_30"
        />
    <Button
        android:id="@+id/myapps_but_moveout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px54"
        android:text="移除"
        android:background="@drawable/edit_button_selector"
        android:focusable="true"
        android:textSize="@dimen/fontsize_30"

        />
</LinearLayout>
</RelativeLayout>

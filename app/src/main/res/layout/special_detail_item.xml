<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:roundCornerImage="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px240"
    android:layout_height="@dimen/px276"
    android:background="@drawable/bg_item_special_detail_selector"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/px24">

    <cn.can.tvlib.ui.view.GlideRoundCornerImageView
        android:id="@+id/special_detail_item_appicon"
        android:layout_width="@dimen/px132"
        android:layout_height="@dimen/px132"
        android:scaleType="fitXY"
        android:background="@drawable/shap_app_list_icon_bg"
        roundCornerImage:cornerSize="@dimen/px20"
        roundCornerImage:placeholder="@mipmap/cibn_icon"
        />
    <TextView
        android:layout_marginTop="@dimen/px20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/special_detail_item_appname"
        android:textSize="@dimen/px32"
        android:textColor="@color/color_80_ffffff"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:duplicateParentState="true"
        android:includeFontPadding="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/special_detail_item_appsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px26"
            android:textColor="@color/color_50_ffffff"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px26"
            android:textColor="@color/color_50_ffffff"
            android:includeFontPadding="false"
            android:text="  |  "/>
        <TextView
            android:id="@+id/special_detail_item_appdownloadnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px26"
            android:textColor="@color/color_50_ffffff"
            android:includeFontPadding="false"/>

    </LinearLayout>
</LinearLayout>

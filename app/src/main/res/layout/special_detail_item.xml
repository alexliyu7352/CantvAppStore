<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px240"
    android:layout_height="@dimen/px276"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/specail_detail_item_shape"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/px24">

    <ImageView
        android:layout_width="@dimen/px132"
        android:layout_height="@dimen/px132"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:id="@+id/special_detail_item_appicon"/>

    <TextView
        android:layout_marginTop="@dimen/px20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/special_detail_item_appname"
        android:textSize="@dimen/px32"
        android:textColor="@color/color_80_ffffff"
        android:includeFontPadding="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/special_detail_item_appsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px26"
            android:textColor="@color/color_50_ffffff"
            android:includeFontPadding="false"
            tools:text="19.25MB"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px26"
            android:textColor="@color/color_50_ffffff"
            android:includeFontPadding="false"
            tools:text="  |  "/>
        <TextView
            android:id="@+id/special_detail_item_appdownloadnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px26"
            android:textColor="@color/color_50_ffffff"
            android:includeFontPadding="false"
            tools:text="2ä¸‡+"/>

    </LinearLayout>
</LinearLayout>

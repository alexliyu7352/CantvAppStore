<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item1"
        android:nextFocusRight="@+id/rl_item2"
        android:nextFocusDown="@+id/rl_item5"
        style="@style/index_manager_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/px270"
            android:layout_height="@dimen/px368"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/index_item1_shape"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/index_manager_icon_top"
            android:src="@drawable/index_manager_icon1"/>

        <TextView
            style="@style/index_manager_textstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/index_manager_text1"/>
    </RelativeLayout>


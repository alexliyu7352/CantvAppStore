<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="index_manager_textstyle" >
        <item name="android:textColor">@color/white_opa80</item>
        <item name="android:textSize">@dimen/px32</item>
        <item name="android:layout_marginTop">@dimen/px220</item>
    </style>

    <style name="index_manager_padding" >
        <item name="android:padding">@dimen/px5</item>
    </style>

    <style name="index_manager_icon_top" >
        <item name="android:layout_marginTop">@dimen/px90</item>
    </style>

    <style name="index_manager_icon_mini_top" >
        <item name="android:layout_marginTop">@dimen/px20</item>
    </style>

    <style name="index_manager_mini_text" >
        <item name="android:textColor">@color/white_opa80</item>
        <item name="android:textSize">@dimen/px32</item>
        <item name="android:layout_marginTop">@dimen/px115</item>
    </style>

</resources>
